<Page
    x:Class="Viewer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Viewer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <Button Content="Show map and robot"/>
        <Canvas>
            <Image x:Name="MapImage" Width="500" Height="500" Canvas.Left="0" Canvas.Top="0"/>
            <Ellipse x:Name="RobotEllipse" Fill="Aqua" Width="10" Height="10"
                     Canvas.Left="{x:Bind RobotViewModel.X, Mode=OneWay}"
                     Canvas.Top="{x:Bind RobotViewModel.Y, Mode=OneWay}"/>
            <Image x:Name="RobotImage" Source="{x:Bind RobotViewModel.Image}"
                   Rotation="{x:Bind RobotViewModel.Orientation}" />
        </Canvas>
    </StackPanel>
</Page>
